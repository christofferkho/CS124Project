package app.component;

import java.text.DateFormat;
import java.text.SimpleDateFormat;

import app.entity.AccessLog;

public class LogoutCommand extends Command {
	
	private AccessLog logout;

	@Override
	public String undo(Exception e) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public String execute() {
		// TODO Auto-generated method stub
		DateFormat date = new SimpleDateFormat("yyyy-MM-dd'T'HH:mm:ss'Z'");
		String ret = "";
		try {
			logout = accessLogDao.save(logout);
			String timeIn = date.format(logout.getTimeIn());
			logout = null;
			
			ret = om.writeValueAsString(map);
			return ret;
		} catch (Exception e) {
			// TODO Auto-generated catch block
			return "Database error " + e.getMessage();
		}
	}
	
	public void findAccessLog(int accessLogPk){
		long pk = accessLogPk;
		logout = accessLogDao.findById(pk);
	}

}
